# API Keys - Copy this file to .env and fill in your actual keys
# DO NOT commit .env to version control!

# Primary LLM Provider Keys (use the one you select in config.yaml)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_PROJECT_ID=your-google-cloud-project-id  # For Vertex AI (optional)
TOGETHER_API_KEY=your-together-api-key-here

# Other Service Keys
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here
UNPAYWALL_EMAIL=your_email@example.com

# Database
DATABASE_PATH=logs/logging.db

# Paths
PDF_CACHE_DIR=pdf_cache
OUTPUT_DIR=output
DATA_DIR=data

# Logging
LOG_LEVEL=INFO

# Search Settings
MAX_RESULTS_PER_SOURCE=100
SEARCH_YEAR_START=2018
SEARCH_YEAR_END=2025

# NOTE: LLM-specific settings (provider, model, temperature, etc.) 
# should be configured in config/config.yaml, not here!